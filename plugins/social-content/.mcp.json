{
  "mcpServers": {
    "slack": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-slack"],
      "env": {
        "SLACK_TOKEN": "${SLACK_TOKEN}"
      },
      "optional": true
    },
    "notion": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-notion"],
      "env": {
        "NOTION_TOKEN": "${NOTION_TOKEN}"
      },
      "optional": true
    },
    "canva": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-canva"],
      "env": {
        "CANVA_TOKEN": "${CANVA_TOKEN}"
      },
      "optional": true
    }
  }
}
